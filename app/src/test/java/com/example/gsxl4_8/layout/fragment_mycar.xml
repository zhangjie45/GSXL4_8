<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    tools:context="com.example.gsxl4_8.Fragment.MycarFragment">


    <RadioGroup
        android:id="@+id/mycar_radiogroup"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/rbtn_mycar_control"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@null"
            android:checked="true"
            android:background="@drawable/radio_button_bg"
            android:text="控      制"
            android:textColor="@color/radio_text_color"/>

        <RadioButton
            android:id="@+id/rbtn_mycar_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@null"
            android:checked="true"
            android:background="@drawable/radio_button_bg"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:text="状      态"
            android:textColor="@color/radio_text_color" />
        <RadioButton
            android:id="@+id/rbtn_mycar_accout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@null"
            android:checked="true"
            android:background="@drawable/radio_button_bg"
            android:text="账      户"
            android:textColor="@color/radio_text_color"/>
    </RadioGroup>
    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="5">
    </FrameLayout>
</LinearLayout>
